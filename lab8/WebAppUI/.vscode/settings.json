{
    // editor
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.rulers": [120],
    "editor.linkedEditing": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.fontSize": 20,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll.eslint": false,
        "source.fixAll.stylelint": true
    },

    // errorLens
    "errorLens.statusBarIconsEnabled": true,
    "errorLens.messageEnabled": false,
    "errorLens.gutterIconsEnabled": true,
    "errorLens.gutterIconSize": "150%",
    // todo-tree
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.statusBarClickBehaviour": "reveal",
    "todo-tree.regex.enableMultiLine": true,
    // See https://github.com/Gruntfuggly/todo-tree/issues/255
    "todo-tree.regex.regex": "(?:(?://|#|<!--|;|/\\*\\*?|\\*)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.highlights.highlightDelay": 0,
    "todo-tree.general.tags": ["TODO", "ATTENTION"],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "question",
            "foreground": "#000",
            "background": "#aa0",
            "iconColour": "#aa0",
            "gutterIcon": true,
            "type": "whole-line"
        },
        "ATTENTION": {
            "icon": "info",
            "foreground": "#fff",
            "background": "#a00",
            "iconColour": "#a00",
            "gutterIcon": true,
            "type": "whole-line"
        }
    },
    // eslint
    "eslint.rules.customizations": [
        {
            "rule": "*",
            "severity": "warn"
        }
    ],
    // stylelint
    "stylelint.validate": ["css"],
    // cSpell
    "cSpell.diagnosticLevel": "Warning",
    "cSpell.enabledLanguageIds": [
        "css",
        "scss",
        "html",
        "javascript",
        "json",
        "markdown",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml",
        "mdx"
    ],
    // files
    "files.exclude": {
        ".git": true,
        ".yarn": true,
        "**/node_modules": true,
        "**/dist": true,
        "yarn.lock": true
    }
}

