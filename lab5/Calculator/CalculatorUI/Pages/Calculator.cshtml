@page
@using CalculatorUI.Models
@model CalculatorUI.Pages.CalculatorModel
@{
    ViewData["Title"] = "Calculator";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Calculator.css" />
    <!-- Дополнительные стили CSS -->
}

<h1>Calculator</h1>

<form method="post" class="form">
    <div class="form-group">
        <label for="leftOperand">Left operand</label>
        <input type="number" id="leftOperand" name="leftOperand" asp-for="ArithmeticOperation!.LeftOperand" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="operatorSymbol">Choose an operator symbol:</label>
        <select id="operatorSymbol" name="operatorSymbol" asp-for="ArithmeticOperation!.OperatorSymbol" class="form-control">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
    </div>
    <div class="form-group">
        <label for="rightOperand">Right operand</label>
        <input type="number" id="rightOperand" name="rightOperand" asp-for="ArithmeticOperation!.RightOperand" class="form-control"/>
    </div>
    <input type="submit" value="=" class="btn btn-primary"/>
</form>

@if (Model.ArithmeticOperation != null)
{
    <h1>Calculator Result: @Model.ArithmeticOperation.Result</h1>
    <div class="calculation-table">
        <div class="number-block-container">
        @foreach (var digit in Model.LeftOperandDigits)
        {
            <div class="number-block">@digit</div>
        }
        </div>
        <div class="number-block-container">
        @foreach (var digit in Model.RightOperandDigits)
        {
            <div class="number-block">@digit</div>
        }
        </div>
        <div class="number-block-container">
        @foreach (var digit in Model.ResultDigits)
        {
            <div class="number-block">@digit</div>
        }
        </div>
    </div>
}
